root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,kt,kts}]
indent_style = space
indent_size = 4
charset = utf-8
max_line_length = 120
ij_continuation_indent_size = 8

[*.html]
indent_style = space
indent_size = 4
charset = utf-8
ij_continuation_indent_size = 8
